<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playboardlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bollywood"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/transp_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tries"
            style="@style/playboard_constraintsText"
            android:layout_width="130dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/black"
            android:gravity="left|bottom"
            android:paddingLeft="10dip"
            android:text="Tries Left : 5" />

        <ImageButton
            android:id="@+id/speaker"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:background="@android:color/black"
            android:paddingBottom="1dip"
            android:src="@drawable/speaker_button" />

        <TextView
            android:id="@+id/countdown"
            style="@style/playboard_constraintsText"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:gravity="right|bottom"
            android:paddingRight="10dip"
            android:text="Time : " />
    </LinearLayout>

    <ImageView
        android:id="@+id/bollylogo"
        android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:background="@drawable/transp_bg"
        android:scaleType="fitXY"
        android:src="@drawable/bollywood_logo" />

    <TextView
        android:id="@+id/hiddenmovie"
        style="@style/playboard_hiddenwordText"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:layout_gravity="center"
        android:background="@drawable/transp_bg"
        android:gravity="center"
        android:maxLines="5"
        android:visibility="gone" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dip"
        android:layout_marginTop="40dip"
        android:background="@android:color/black"
        android:text="Start?"
        android:textColor="@android:color/white" />

    <ScrollView
        android:id="@+id/alphascroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/transp_bg"
        android:clickable="false" >

        <TableLayout
            android:id="@+id/alphabet_table"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:stretchColumns="*" >

            <TableRow>

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="1"
                    android:text="@string/A" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="2"
                    android:text="@string/B" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="3"
                    android:text="@string/C" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="4"
                    android:text="@string/D" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="5"
                    android:text="@string/E" />
            </TableRow>

            <TableRow>

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="1"
                    android:text="@string/F" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="2"
                    android:text="@string/G" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="3"
                    android:text="@string/H" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="4"
                    android:text="@string/I" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="5"
                    android:text="@string/J" />
            </TableRow>

            <TableRow>

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="1"
                    android:text="@string/K" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="2"
                    android:text="@string/L" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="3"
                    android:text="@string/M" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="4"
                    android:text="@string/N" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="5"
                    android:text="@string/O" />
            </TableRow>

            <TableRow>

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="1"
                    android:text="@string/P" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="2"
                    android:text="@string/Q" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="3"
                    android:text="@string/R" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="4"
                    android:text="@string/S" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="5"
                    android:text="@string/T" />
            </TableRow>

            <TableRow>

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="1"
                    android:text="@string/U" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="2"
                    android:text="@string/V" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="3"
                    android:text="@string/W" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="4"
                    android:text="@string/X" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="5"
                    android:text="@string/Y" />
            </TableRow>

            <TableRow>

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="1"
                    android:text="@string/Z" />

                <Button
                    style="@style/playboard_alphabuttonsText"
                    android:layout_column="1"
                    android:text="@string/guess" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>